  <div class="back-link">
    <%= link_to friends_path do %>
      <i class="fas fa-undo-alt back"></i>
    <% end %>
  </div>
  <div class="friend-card">
    <div class="friend-picture">
      <% if @friend.photo.attached? %>
        <div class="img-friend" style="background-image: url('<%= @friend.photo %>');"></div>
      <% else %>
        <div class="img-friend" style="background-image: url('<%= asset_path 'friend.png' %>');"></div>

      <% end %>
    </div>

    <div class="friend-content">
        <h1><%= "#{@friend.first_name} #{@friend.last_name}" %></h1>
      <div class="price">
        <p><%= @friend.price_p_hour %>$ / hour</p>
      </div>
      <div class="friend-category">
        <h3>Category</h3>
        <p class="category-box"><%= @friend.friendship_category %></p>
      </div>
      <div class="description-friend">
        <p><%= @friend.description %></p>
      </div>
      <div class="btn btn-primary">
        <%= link_to 'Book me', new_friend_booking_path(@friend) %>
      </div>
    </div>
  </div>




