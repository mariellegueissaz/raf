<div class="container">
<h1>My Bookings</h1>
<div class="cards">
  <% @bookings.each do |booking| %>
    <div class="card" style="width: 15rem;">
      <div class="card-img-top">
        <% if booking.friend.photo.attached? %>
          <%= image_tag(booking.friend.photo, width: 238, height: 212, :alt => "friend") %>
        <% else %>
          <%= image_tag("friend.png", width: 238, height: 212, :alt => "friend") %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= booking.friend.first_name %> <%= booking.friend.last_name %></h5>
        <p class="card-text"><%= booking.start_time.strftime("%d-%m %H:%M") %> -> <%= booking.end_time.strftime("%d-%m %H:%M") %></p>
        <p class="card-text"><%= booking.booking_price %> â‚¬</p>
        <%= link_to friend_booking_path(booking.friend, booking), method: :delete, data: { confirm: "Are you sure? #{booking.friend.first_name} is already disappointed!"} do %>
        <i class= "far fa-trash-alt" id="delete"></i>
        <%= link_to "Edit this booking", edit_friend_booking_path(booking.friend, booking)  %>
        <% end %>
      </div>
      </div>
    <% end %>
</div>
